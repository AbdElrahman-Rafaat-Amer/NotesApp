<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/noPasswordsView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/noPasswordsAnimation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintTop_toBottomOf="@+id/guideline"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/no_passwords"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/noPasswordsTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:text="@string/empty_password"
        android:textAlignment="center"
        android:textColor="?colorOnSecondary"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/noPasswordsAnimation" />

</androidx.constraintlayout.widget.ConstraintLayout>