<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenActivity">

    <RadioGroup
        android:id="@+id/color_picker_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="7sp"
        android:layout_marginTop="32dp"
        android:checkedButton="@id/color1"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/color1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_color_back"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/gender_background_selector"
            android:paddingTop="16sp"
            android:tag="0"
            android:textColor="@color/gender_text_selector"
            app:drawableTint="@color/gender_text_selector" />

        <RadioButton
            android:id="@+id/color2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="4sp"
            android:background="@drawable/ic_color_back"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/gender_background_selector"
            android:paddingTop="16sp"
            android:tag="1"
            android:textColor="@color/gender_text_selector"
            app:drawableTint="@color/gender_text_selector" />

        <RadioButton
            android:id="@+id/color3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_color_back"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/gender_background_selector"
            android:paddingTop="16sp"
            android:tag="2"
            android:textColor="@color/gender_text_selector"
            app:drawableTint="@color/gender_text_selector" />

        <RadioButton
            android:id="@+id/color4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="4sp"
            android:background="@drawable/ic_color_back"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/gender_background_selector"
            android:paddingTop="16sp"
            android:tag="3"
            android:textColor="@color/gender_text_selector"
            app:drawableTint="@color/gender_text_selector" />

        <RadioButton
            android:id="@+id/color5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_color_back"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/gender_background_selector"
            android:paddingTop="16sp"
            android:tag="4"
            android:textColor="@color/gender_text_selector"
            app:drawableTint="@color/gender_text_selector" />

        <RadioButton
            android:id="@+id/color6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="4sp"
            android:background="@drawable/ic_color_back"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/gender_background_selector"
            android:paddingTop="16sp"
            android:tag="5"
            android:textColor="@color/gender_text_selector"
            app:drawableTint="@color/gender_text_selector" />

        <RadioButton
            android:id="@+id/color7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_color_back"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/gender_background_selector"
            android:paddingTop="16sp"
            android:tag="6"
            android:textColor="@color/gender_text_selector"
            app:drawableTint="@color/gender_text_selector" />

    </RadioGroup>


    <View
        android:id="@+id/color_view"
        android:layout_width="250sp"
        android:layout_height="150sp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

