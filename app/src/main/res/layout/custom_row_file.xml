<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="7sp"
    app:cardBackgroundColor="?colorSecondaryVariant"
    app:cardCornerRadius="5sp">

    <TextView
        android:id="@+id/noteTitle_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7sp"
        android:text="@string/all"
        android:textColor="?colorOnSecondary"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/note_imageView" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/showAllFolders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_folder"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/files_recyclerview"
        app:layout_constraintEnd_toEndOf="@+id/notes_recyclerview"
        app:layout_constraintTop_toTopOf="@id/files_recyclerview" />

</androidx.cardview.widget.CardView>