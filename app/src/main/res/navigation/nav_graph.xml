<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_fragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="com.abdelrahman.rafaat.notesapp.ui.view.fragments.HomeFragment"
        android:label="home fragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_addNote"
            app:destination="@id/add_note_fragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/archived_fragment"
        android:name="com.abdelrahman.rafaat.notesapp.ui.view.fragments.ArchivedNotesFragment"
        android:label="archived fragment"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/favorites_fragment"
        android:name="com.abdelrahman.rafaat.notesapp.ui.view.fragments.FavoritesFragment"
        android:label="favorites fragment"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/lock_my_passwords_fragment"
        android:name="com.abdelrahman.rafaat.notesapp.ui.view.fragments.LockMyPasswordsFragment"
        android:label="lock my passwords fragment"
        tools:layout="@layout/fragment_lock_my_passwords" />

    <fragment
        android:id="@+id/unlock_my_passwords_fragment"
        android:name="com.abdelrahman.rafaat.notesapp.ui.view.fragments.UnLockMyPasswordsFragment"
        android:label="unlock my passwords fragment"
        tools:layout="@layout/fragment_un_lock_my_passwords" />


    <fragment
        android:id="@+id/passwords_fragment"
        android:name="com.abdelrahman.rafaat.notesapp.ui.view.fragments.PasswordsFragment"
        android:label="passwords fragment"
        tools:layout="@layout/fragment_passwords" />


    <fragment
        android:id="@+id/add_note_fragment"
        android:name="com.abdelrahman.rafaat.notesapp.ui.view.fragments.AddNoteFragment"
        android:label="add note fragment"
        tools:layout="@layout/fragment_add_note" />

    <fragment
        android:id="@+id/show_note_fragment"
        android:name="com.abdelrahman.rafaat.notesapp.ui.view.fragments.ShowNoteFragment"
        android:label="show note fragment"
        tools:layout="@layout/fragment_show">
        <action
            android:id="@+id/action_showNote_to_editNote"
            app:destination="@id/add_note_fragment" />
    </fragment>


    <fragment
        android:id="@+id/password_fragment"
        android:name="com.abdelrahman.rafaat.notesapp.ui.view.fragments.PasswordFragment"
        android:label="edit note fragment"
        tools:layout="@layout/fragment_password" />
</navigation>